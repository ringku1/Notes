<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUIApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="WinUIApp1">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <!-- Row for TabView -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title bar with buttons like File, Edit, View -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Height="25" VerticalAlignment="Top" Background="#FF2C2C2C" Grid.Row="0" Grid.Column="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="File" Content="File" Width="50" Height="40" FontSize="12" Foreground="White" Click="fileOnClick"/>
                    <Button x:Name="Edit" Content="Edit" Width="50" Height="40" FontSize="12" Foreground="White" Click="editOnClick"/>
                    <Button x:Name="View" Content="View" Width="50" Height="40" FontSize="12" Foreground="White" Click="viewOnClick"/>
                </StackPanel>
            </Border>
            <Border Height="25" VerticalAlignment="Top" Background="#FF2C2C2C" Grid.Row="0" Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <DropDownButton AutomationProperties.Name="Email">
                        <DropDownButton.Content>
                            <FontIcon Glyph="&#xE945;" FontSize="10"/>
                        </DropDownButton.Content>
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Rewrite"/>
                                <MenuFlyoutItem Text="Make shorter"/>
                                <MenuFlyoutItem Text="Make longer"/>
                                <MenuFlyoutItem Text="Change tone"/>
                                <MenuFlyoutItem Text="Change format"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>

                    <FontIcon Glyph="&#xE77B;" FontSize="14" Margin="5"/>
                    <Button x:Name="Setting" Width="50" Height="40" FontSize="10">
                        <FontIcon Glyph="&#xE713;" FontSize="15"/>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- TabView just below the first row -->
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0">
            <muxc:TabView x:Name="tabview" AddTabButtonClick="TabViewNewTab" TabCloseRequested="TabCloseTab" VerticalAlignment="Center" Grid.Row="1" Background="#FF2C2C2C">
                <muxc:TabView.TabItems>
                    <muxc:TabViewItem Header="Untitle">
                        <ScrollViewer VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="FileContentTextBox" AcceptsReturn="True" Height="1000" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
                        </ScrollViewer>
                    </muxc:TabViewItem>
                </muxc:TabView.TabItems>
            </muxc:TabView>
        </StackPanel>

        <!-- Footer Bar -->
        <Border VerticalAlignment="Bottom" Background="#FF2C2C2C" Grid.Row="2" Grid.Column="0" Width="10000" Height="25">
        </Border>
    </Grid>
</Window>
