<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUIApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUIApp1">
    <!--
    -->
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Height="25" VerticalAlignment="Top" Background="LightBlue" Grid.Row="0" Grid.Column="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <!--<Button x:Name="File" Content="File" Width="50" Height="40" FontSize="12"/>
                <Button x:Name="New" Content="New" Width="50" Height="40" FontSize="12"/>
                <Button x:Name="Edit" Content="Edit" Width="50" Height="40" FontSize="12"/>-->
                <SymbolIcon x:Name="File_sym" Symbol="OpenFile" Foreground="Black" Margin="2"/>
                <!--<TextBlock Text="File" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>-->
                <Button x:Name="File" Content="File" Width="50" Height="40" FontSize="12" Click="fileOnClick"/>
                <SymbolIcon x:Name="Save" Symbol="Save" Foreground="Black" Margin="2"/>
                <TextBlock Text="Save" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>
                <SymbolIcon  x:Name="Edit" Symbol="Edit" Foreground="Black" Margin="2"/>
                <TextBlock Text="Edit" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>
            </StackPanel>
        </Border>
        
        <Border Background="Black" Grid.Row="1" Grid.Column="0" Width="10000" Height="10000">
        </Border>

        <Border VerticalAlignment="Bottom" Background="LightBlue" Grid.Row="2" Grid.Column="0" Width="10000" Height="25">
        </Border>
    </Grid>
</Window>
